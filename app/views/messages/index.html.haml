.wrapper

  =render 'shared/side_bar', groups: @groups

  .chat
    .header
      .left-header
        .left-header__title
          = @group.name
        %ul.left-header__members
          %Member:
            - @group.users.each do |user|
              = user.name
          %li.member
            メンバー名
      .right-header
        .right-header__button
          = link_to 'Edit', edit_group_path(current_user)
    .messages
      .message
        .upper-message
          .upper-message__user-name
            メンバー名
